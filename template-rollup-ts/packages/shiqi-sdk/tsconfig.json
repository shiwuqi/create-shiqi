{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "ES2015",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "ES6",
        "lib": [
            "es2017"
        ],
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist"
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "**/dist"
    ]
}